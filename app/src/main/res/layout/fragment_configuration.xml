<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/title_configuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Configuración"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#333" />

        <!-- Sección Cuenta -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Cuenta"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333" />

        <!-- Desplegable 1: Contraseña y Seguridad -->
        <LinearLayout
            android:id="@+id/section_password_security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <!-- Título -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/border_edit_text"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Contraseña y Seguridad"
                    android:textSize="16sp"
                    android:textColor="#333" />

                <ImageView
                    android:id="@+id/arrow_password_security"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/abajo" />
            </LinearLayout>

            <!-- Contenido (Desplegable) -->
            <LinearLayout
                android:id="@+id/content_password_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cambiar contraseña" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seguridad en dos pasos" />
            </LinearLayout>
        </LinearLayout>

        <!-- Repite el bloque anterior para las demás secciones -->
        <!-- Desplegable 2: Datos Personales -->
        <!-- Desplegable 3: Tu Actividad -->
        <!-- Desplegable 4: Privacidad -->

    </LinearLayout>
</ScrollView>